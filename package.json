{
  "name": "react-template",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "moment": "^2.25.3",
    "node-sass": "^4.14.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-router-dom": "^5.2.0",
    "react-scripts": "3.4.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "start-background": "if ! nc -z localhost 3000; then nohup yarn start > /tmp/npm-start.log 2>&1 & sleep 5; fi",
    "build": "react-scripts build",
    "jest": "react-scripts test --watchAll=false",
    "eject": "react-scripts eject",
    "lint": "eslint --ext .jsx --ext .js src cypress",
    "backstop:test": "sh backstop/run-backstop.sh test",
    "backstop:report": "sh backstop/run-backstop.sh openReport",
    "backstop:approve": "sh backstop/run-backstop.sh approve",
    "cypress:open": "sh cypress/run-cypress.sh case:open",
    "cypress:test": "sh cypress/run-cypress.sh",
    "test:ci": "yarn run jest && yarn run lint"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "backstopjs": "4.3.4",
    "cypress": "^4.5.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "eslint-plugin-jest": "^23.11.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.20.0"
  }
}
